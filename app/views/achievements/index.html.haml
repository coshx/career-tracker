%h3 #{current_user.name}'s Achievements
%h4 New Achievement
  
=form_for(@achievement) do |f|
  -if @achievement.errors.any?
    #error_explanation
      =pluralize(@achievement.errors.count, "error")
      prohibited this user from being saved:
      = @achievement.errors.full_messages.each do |msg|
        =msg
  %div.field
    =f.label :description
    =f.text_area :description
  %div.field
    =f.label :results
    =f.text_area :results
  %div.field
    =f.label :start_date
    =f.text_field :start_date
  %div.field
    =f.label :end_date
    =f.text_field :end_date
  %div.field
    =f.label :keywords
    =f.text_field :keywords
  %div.actions
    =f.submit

=render "list"